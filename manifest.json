{
    "name": "ToDoList",
    "version": "1.0",
    "manifest_version" : 1,
    "description": "간단하게 할 일을 추가하고 삭제 할 수 있습니다.",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": {
      "js": ["content.js"]
    },
    "permissions": ["storage"],  
    "browser_action": {    
      "default_icon": "favicon.png",    
      "default_popup": "popup.html"  
    }    
    
  }